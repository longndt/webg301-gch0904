{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('author_add') }}">
        <img src = "{{ asset('images/add.jpg') }}" width="80" heigh="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Author Birthday</th>
                <th>Author Address</th>
                <th>Author Gender</th>
                <th>Published Book(s)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td> {{ author.name }} </td>
                    <td> {{ author.birthday | date('d/m/Y') }} </td>
                    <td> {{ author.address }} </td>
                    <td> {{ author.gender }} </td>
                    <td> 
                        {% if author.books != null %}
                            {% for book in author.books %}
                                <a class="text-decoration-none" href="{{ path('book_detail', {'id' : book.id }) }}">
                                {{ book.title }}
                                </a>
                            <br>
                        {% endfor %}
                        {% endif %}         
                    </td>
                    <td>
                        <a href = "{{ path('author_edit', {'id' : author.id }) }}">
                            <img src = "{{ asset('images/edit.png') }}" width="50" height="50" >
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('author_delete', {'id' : author.id }) }}"
                        onclick = "return confirm('Do you want to delete this author ?')">
                            <img src = "{{ asset('images/delete.png') }}" width="50" height="50" >
                        </a>
                    </td>
                </tr>
        </tbody>
    </table>
</div>
{% endblock %}
