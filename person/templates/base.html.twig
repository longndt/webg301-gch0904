<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} My Symfony Website {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block nav %}
        <div class="container mt-3 text-center">
            <ul class="nav nav-pills nav-fill">
                <h3>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("view_all_person") }}">PERSON</a>
                    </li>
                </h3>
                <h3>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("view_all_car") }}">CAR</a>
                    </li>
                </h3>
                <h3>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("view_all_job") }}">JOB</a>
                    </li>
                </h3>
            </ul>
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
