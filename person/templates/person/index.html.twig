{% extends "base.html.twig" %}

{% block body %}
   <div class="container">
      <a class="btn btn-outline-success mt-3"  href="{{ path ('add_person')}}">Add new person</a>
      <table class="table text-center">
         <thead>
            <tr>
               <th>Person ID</th>
               <th>Person Name</th>
               <th>Person Age</th>
               <th>Menu</th>
            </tr>
         </thead>
         <tbody>
            {% for person in persons %}
               <tr>
                  <td>{{ person.id }}</td>
                  <td> {{ person.PersonName }} </td>
                  <td> {{ person.PersonAge }} </td>
                  <td>
                     <a class="btn btn-primary" href="{{ path('view_person', {'id' : person.id }) }}">
                        DETAIL
                     </a>
                     <a class="btn btn-warning" href="{{ path('edit_person', {'id' : person.id }) }}">
                        EDIT
                     </a>
                     <a class="btn btn-danger" href="{{ path('delete_person_by_id', {'id' : person.id }) }}">
                        DELETE
                     </a>
                  </td>
               </tr>
            {% endfor %}    
         </tbody> 
      </table>
   </div>
{% endblock %}