{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('genre_add') }}">
        <img src = "{{ asset('images/add.jpg') }}" width="80" heigh="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Genre Name</th>
                <th>Genre Description</th>
                <th>Book(s)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td> {{ genre.name }}  </td>
                    <td> {{ genre.description }}</td>
                    <td> 
                        {% if genre.books != null %}
                            {% for book in genre.books %}
                                <a class="text-decoration-none" href="{{ path('book_detail', {'id' : book.id }) }}">
                                    {{ book.title }}
                                </a>   
                            <br>
                        {% endfor %}
                        {% endif %}     
                    </td>
                    <td>
                        <a class="text-decoration-none" href = "{{ path('genre_edit', {'id' : genre.id }) }}">
                            <img src = "{{ asset('images/edit.png') }}" width="50" heigh="50" >
                        </a>
                    </td>
                    <td>
                        <a class="text-decoration-none" href="{{ path('genre_delete', {'id' : genre.id }) }}"
                        onclick = "return confirm('Do you want to delete this genre ?')">
                            <img src = "{{ asset('images/delete.png') }}" width="50" heigh="50" >
                        </a>
                    </td>
                </tr>
        </tbody>
    </table>
</div>
{% endblock %}
