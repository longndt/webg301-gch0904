{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('author_add') }}">
        <img src = "{{ asset('images/add.jpg') }}" width="80" heigh="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Author ID</th>
                <th>Author Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>
                        <a class="text-decoration-none" href= "{{ path('author_detail', {'id' : author.id }) }}">
                            {{ author.name }}
                        </a>
                    </td>
                    <td>
                        <a href = "{{ path('author_edit', {'id' : author.id }) }}">
                            <img src = "{{ asset('images/edit.png') }}" width="50" height="50" >
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('author_delete', {'id' : author.id }) }}"
                        onclick = "return confirm('Do you want to delete this author ?')">
                            <img src = "{{ asset('images/delete.png') }}" width="50" height="50" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
