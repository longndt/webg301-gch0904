{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('genre_add') }}">
        <img src = "{{ asset('images/add.jpg') }}" width="80" height="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Genre ID</th>
                <th>Genre Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for genre in genres %}
                <tr>
                    <td>{{ genre.id }}</td>
                    <td>
                        <a class="text-decoration-none" href= "{{ path('genre_detail', {'id' : genre.id }) }}">
                            {{ genre.name }}
                        </a>
                    </td>
                    <td>
                        <a href = "{{ path('genre_edit', {'id' : genre.id }) }}">
                            <img src = "{{ asset('images/edit.png') }}" width="50" height="50" >
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('genre_delete', {'id' : genre.id }) }}"
                        onclick = "return confirm('Do you want to delete this genre ?')">
                            <img src = "{{ asset('images/delete.png') }}" width="50" height="50" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
