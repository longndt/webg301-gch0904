{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-6 mt-3 mb-3">
   <h2 class="text-center">EDIT AUTHOR</h2>
   <div class="col md-6"></div>
      {{ form_start (authorForm) }}
         <div class="form-group">
            {{ form_label (authorForm.name)}}
            {{ form_widget (authorForm.name ,
               {
                  'attr' : {'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label (authorForm.birthday)}}
            {{ form_widget (authorForm.birthday ,
               {
                  'attr' : {'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label (authorForm.address)}}
            {{ form_widget (authorForm.address ,
               {
                  'attr' : {'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label (authorForm.gender)}}
            {{ form_widget (authorForm.gender ,
               {
                  'attr' : {'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group text-center mt-3">
            <input class="btn btn-primary" type="submit" value="Edit" />
         </div>
      {{ form_end (authorForm)}}
   </div>
</div>
{% endblock %}